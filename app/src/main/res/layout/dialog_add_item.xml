<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report an Item"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/rgStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbLost"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="I Lost It"
                android:textColor="#B71C1C"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbFound"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="I Found It"
                android:textColor="#1B5E20"/>
        </RadioGroup>

        <EditText
            android:id="@+id/etItemTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_gray_input"
            android:hint="What is the item? (e.g., Blue Watch)"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/etItemMessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_gray_input"
            android:hint="Add details... (e.g., Where did you lose/find it? Who did you leave it with?)"
            android:gravity="top|start"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivSelectedImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_marginEnd="16dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"/>

            <Button
                android:id="@+id/btnSelectImage"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Photo"
                app:strokeColor="@color/black"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmitItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Post to Feed"
            android:textColor="@color/white"
            android:paddingVertical="12dp"
            app:cornerRadius="8dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>