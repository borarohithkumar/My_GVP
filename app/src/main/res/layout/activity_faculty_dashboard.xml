<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FACULTY NAME -->
        <TextView
            android:id="@+id/tvFacultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Faculty"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop" />

        <!-- DASHBOARD GRID -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- RESULTS CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/lavender">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/results"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnViewResults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view" />

                    <Button
                        android:id="@+id/btnUploadResults"
                        android:text="@string/upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ATTENDANCE CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/lavender">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/attendance"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/btnViewAttendance"
                        android:text="@string/view"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/btnUploadAttendance"
                        android:text="@string/upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                <!-- ACHIEVEMENTS CARD -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/lavender">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/achievement"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/btnViewAchievements"
                            android:text="@string/view"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/btnUploadAchievements"
                            android:text="@string/upload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- LOST & FOUND CARD -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/lavender">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Lost &amp; Found"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/btnViewLost"
                            android:text="@string/view"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/btnReportLost"
                            android:text="Report"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
        </GridLayout>

    </LinearLayout>
</ScrollView>
