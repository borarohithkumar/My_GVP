<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:alpha="0.5"
            android:src="@drawable/ic_launcher_foreground" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="You haven't uploaded anything!!\nLet's upload your first Achievement"
            android:textColor="#9E9E9E"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_achievements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="#C6B7E2"
        app:tint="@android:color/white" />

    <ScrollView
        android:id="@+id/layout_upload_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#F8F9FA"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Achievement"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"/>

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@android:drawable/btn_dropdown"/>

            <Spinner
                android:id="@+id/spinner_domain"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:background="@android:drawable/btn_dropdown"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_select_file"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Select Certificate"
                app:strokeColor="#C6B7E2"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_file_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No file selected"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_achievement"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Upload Now"
                app:backgroundTint="#C6B7E2"
                app:cornerRadius="25dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>