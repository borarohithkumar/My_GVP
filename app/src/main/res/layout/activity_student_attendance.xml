<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Your Attendance"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the Subject and the 4-digit PIN provided by your faculty."
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#666666"/>

            <EditText
                android:id="@+id/et_student_subject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:hint="Enter Subject (e.g., DBMS)"
                android:background="@drawable/bg_gray_input"
                android:padding="12dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_student_pin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:hint="PIN (----)"
                android:inputType="number"
                android:maxLength="4"
                android:background="@drawable/bg_gray_input"
                android:padding="12dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:letterSpacing="0.5"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_submit_attendance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Submit Attendance"
                android:backgroundTint="#4CAF50"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>